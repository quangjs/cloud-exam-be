# =============================================================================
# Quick Quiz Backend - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# Generate secrets with: openssl rand -base64 32

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=1337

# -----------------------------------------------------------------------------
# Security Keys & Secrets
# -----------------------------------------------------------------------------
# Generate these with: openssl rand -base64 32
APP_KEYS=key1,key2,key3,key4
API_TOKEN_SALT=your-api-token-salt
ADMIN_JWT_SECRET=your-admin-jwt-secret
TRANSFER_TOKEN_SALT=your-transfer-token-salt
JWT_SECRET=your-jwt-secret
ENCRYPTION_KEY=your-encryption-key

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Options: sqlite, postgres, mysql
DATABASE_CLIENT=postgres

# PostgreSQL / MySQL
DATABASE_HOST=127.0.0.1
DATABASE_PORT=5432
DATABASE_NAME=quick_quiz
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL=false
DATABASE_SCHEMA=public

# Connection Pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_CONNECTION_TIMEOUT=60000

# SQLite (alternative - for development)
# DATABASE_CLIENT=sqlite
# DATABASE_FILENAME=.tmp/data.db

# -----------------------------------------------------------------------------
# Email Configuration (for email verification)
# -----------------------------------------------------------------------------
EMAIL_PROVIDER=nodemailer

# SMTP Settings
# For Gmail: Use App Password (https://myaccount.google.com/apppasswords)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-16-char-app-password
SMTP_FROM=noreply@quickquiz.com
SMTP_REPLY_TO=support@quickquiz.com
SMTP_IGNORE_TLS=false

# For Mailhog (local development):
# SMTP_HOST=localhost
# SMTP_PORT=1025
# SMTP_SECURE=false
# SMTP_USERNAME=
# SMTP_PASSWORD=
# SMTP_IGNORE_TLS=true

# -----------------------------------------------------------------------------
# Frontend URL (for email confirmation redirect)
# -----------------------------------------------------------------------------
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FLAG_NPS=true
FLAG_PROMOTE_EE=true
